# ChainMind Frontend - Railway Environment Variables
# Copy these to your Railway dashboard under "Variables" section

# API Configuration
NEXT_PUBLIC_API_URL=https://chainmind-backend-production.up.railway.app/api/v1
NEXT_PUBLIC_WS_URL=wss://chainmind-backend-production.up.railway.app

# Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID=137
NEXT_PUBLIC_CHAIN_NAME=Polygon

# Smart Contract Addresses (update with your deployed contracts)
NEXT_PUBLIC_ESCROW_CONTRACT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_STAKING_CONTRACT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_REPUTATION_CONTRACT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PAYMENT_CONTRACT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_TOKEN_CONTRACT=0x0000000000000000000000000000000000000000

# RPC Configuration
NEXT_PUBLIC_POLYGON_RPC=https://polygon-rpc.com

# Optional: Analytics & Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Optional: IPFS Configuration
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud

# Development
NEXT_PUBLIC_APP_ENV=production
